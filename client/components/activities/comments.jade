template(name="commentForm")
  .new-comment.js-new-comment(
    class="{{#if commentFormIsOpen}}is-open{{/if}}")
    //- +userAvatar(userId=currentUser._id noRemove=true) - removed by ben - 21.2.24
    form.js-new-comment-form
      +editor(class="js-new-comment-input")
        | {{getUnsavedValue 'cardComment' currentCard._id}}
      .add-controls
        button.confirm.clear.js-add-comment(type="submit") {{_ 'comment'}}
        button.save-and-exit.primary.js-close-card-details {{_ 'save-and-exit'}}
